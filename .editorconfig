# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = false

[*.{js,jsx,ts,tsx,mjs,mjsx,cjs,cjsx,sh,rb}]
indent_size = 2
max_line_length = 80

[*.{py}]
indent_size = 4
max_line_length = 80

[*.{css,scss,less,html,hbs,ejs,json,code-workspace,yml,yaml,gql,styl}]
indent_size = 2
trim_trailing_whitespace = true
